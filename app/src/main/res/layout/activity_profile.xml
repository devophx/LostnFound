<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layoutp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashbg"
    android:fitsSystemWindows="true">


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_viewp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dashbg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/dashbg"
            android:orientation="vertical"
            android:padding="1dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#21a8e9"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:navigationIcon="@drawable/hdr" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/dashbg"
                android:paddingTop="20dp"
                android:scrollbars="none">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="1dp">


                    <!--            //Card 1-->
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="350dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="10dp">


                            <ImageView
                                android:id="@+id/card1"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/btnbg"
                                android:src="@drawable/profile" />

                            <TextView
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="40dp"
                                android:padding="10dp"
                                android:text="TITLE"
                                android:textAlignment="center"
                                android:textSize="24sp" />

                            <TextView
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="30dp"
                                android:padding="10dp"
                                android:text="Before getting into an example, we should know what is Horizontal Scroll View. Horizontal Scrollview provides by android.widget.HorizontalScrollView class. It is used to scroll child views in a horizontal direction."
                                android:textAlignment="center"
                                android:textSize="24sp" />

                            <Button
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/btnbg"
                                android:text="MORE"
                                android:textSize="24sp" />


                        </LinearLayout>
                    </ScrollView>
<!--                    MIDLINE-->
                    <ScrollView
                        android:layout_width="20dp"
                        android:background="@drawable/dashbg"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="350dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="10dp">

                        </LinearLayout>
                    </ScrollView>

                    <!--            //Card 2-->
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="350dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="10dp">


                            <ImageView
                                android:id="@+id/card2"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/btnbg"
                                android:src="@drawable/profile" />

                            <TextView
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="40dp"
                                android:padding="10dp"
                                android:text="TITLE"
                                android:textAlignment="center"
                                android:textSize="24sp" />

                            <TextView
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="30dp"
                                android:padding="10dp"
                                android:text="Before getting into an example, we should know what is Horizontal Scroll View. Horizontal Scrollview provides by android.widget.HorizontalScrollView class. It is used to scroll child views in a horizontal direction."
                                android:textAlignment="center"
                                android:textSize="24sp" />

                            <Button
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/btnbg"
                                android:text="MORE"
                                android:textSize="24sp" />


                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>


            </HorizontalScrollView>
        </LinearLayout>

    </ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>


